#include "libft.h"

char *ft_strjoin(char const *s1, char const *s2)
{
	char *ptr;
	char *res;
	size_t n;

	if (!(ptr = malloc(sizeof(char) * (ft_strlen(s1) + ft_strlen(s2)))))
		return NULL;
	res = ptr;
	n = 0;
	while (++n < ft_strlen(s1))
		*++ptr = s1[n];
	n = 0;
	while (++n < ft_strlen(s2))
		*++ptr = s2[n];
	return res;
}
